{
    "manifest_version": 3,
    "name": "Dictionary Extension",
    "version": "1.0",
    "description": "A Chrome extension for retrieving word meanings",
    "action": {
        "default-popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
          }
    },
    "permissions": [
        "activeTab", "storage"
    ]
}